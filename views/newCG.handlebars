
<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="centered" style="text-align: center">Create a New Campground</h1>
            <div id="newCG" style="width: 30%; margin: 25px auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="CGname" placeholder="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="CGimage" placeholder="image url">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
</div>